###################################################################################################
# settings
###################################################################################################
HPC_USER      = hpcuser004
HPC_HOME      = /home/$(HPC_USER)

# compiler settings
CC            = gcc
CFLAGS        = -Wall
OPT_LEVEL     = 2
LIBS		  = -lpthread


# objects
OBJS=newton


###################################################################################################
# targets
###################################################################################################
all: clean $(OBJS)

newton: newton.c
	$(CC) -o $@ $(CFLAGS) -O$(OPT_LEVEL) $(LIBS) $<


# helpers
clean:
	@ rm -f $(OBJS)
